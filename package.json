{
  "name": "kaamelott_citation_api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:local": "set ENV=local&& nest start --watch",
    "start:local:debug": "set ENV=local&& nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest.config.json",
    "test:watch": "jest --config ./jest.config.json --watch",
    "test:cov": "jest --config ./jest.config.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./jest.config.json --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:generate": "npm run typeorm -- migration:generate -d ./typeorm.config.ts",
    "migration:run": "npm run typeorm -- migration:run -d ./typeorm.config.ts",
    "migration:run:prod": "typeorm migration:run -d ./typeorm.config.js",
    "migration:revert": "npm run typeorm -- migration:revert -d ./typeorm.config.ts",
    "migration:revert:prod": "typeorm migration:revert -d ./typeorm.config.js",
    "migration:show": "npm run typeorm -- migration:show -d ./typeorm.config.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d ./typeorm.config.ts",
    "schema:log": "npm run typeorm -- schema:log -d ./typeorm.config.ts",
    "docker:build:dev": "cd docker/compose && docker-compose --env-file ../environment/.env.dev -f docker-compose.yml -f docker-compose.dev.yml up -d --build && docker-compose --env-file ../environment/.env.dev -f docker-compose.yml -f docker-compose.dev.yml ps",
    "docker:build:prod": "cd docker/compose && docker-compose --env-file ../environment/.env.prod -f docker-compose.yml -f docker-compose.prod.yml up -d --build && docker-compose --env-file ../environment/.env.prod -f docker-compose.yml -f docker-compose.prod.yml ps"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "joi": "^17.13.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
