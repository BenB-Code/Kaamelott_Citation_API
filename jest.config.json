{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!main.(t|j)s",
    "!migrations/**",
    "!health/**",
    "!config/**",
    "!**/*.module.(t|j)s",
    "!**/*.interface.(t|j)s",
    "!**/*.entity.(t|j)s",
    "!**/*.spec.(t|j)s",
    "!**/*.e2e-spec.(t|j)s"
  ]
}
